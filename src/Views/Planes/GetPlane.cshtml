@{
    Layout = "_Layout";
}

@model BlitzFlug.Models.Plane

@if (null == Model)
{
    <div class="text-center" style="margin-top: 150px">
        <h2>Нет информации о самолете, выполняющем данный рейс</h2>
    </div>
}
else
{
    <div class="container">
        <div class="text-center" style="margin-top: 150px">
            <h2>Самолет, выполняющий данный рейс</h2>
        </div>
        <div class="card text-left" style="margin-top: 20px">
            <div class="card-body">
                <h3 class="card-title">Производитель: @Model.Manufacturer</h3>
                <h3 class="card-title">Модель: @Model.Model</h3>
                <h3 class="card-title">Количество мест экономкласса: @Model.EconomyClassNum</h3>
                <h3 class="card-title">Количество мест бизнес-класса: @Model.BusinessClassNum</h3>
                <h3 class="card-title">Количество мест первого класса: @Model.FirstClassNum</h3>
            </div>
        </div>
    </div>
}
