@{
    Layout = "_Layout";
}

@model BlitzFlug.Models.Ticket

<div class="text-center" style="margin-top: 150px">
    <h2>Добавить новый билет</h2>
</div>
<form method="post" asp-controller="Tickets" asp-action="InsertTicket">
    <div class="form-group" style="margin-top: 25px">
        <input asp-for="FlightId" min="1" class="form-control" placeholder="ID рейса" required>
    </div>
    <input asp-for="OrderId" type="hidden" value="0" required>
    <div class="form-group" style="margin-top: 25px">
        <input asp-for="Row" min="1" class="form-control" placeholder="Ряд" required>
    </div>
    <div class="form-group" style="margin-top: 25px">
        <select asp-for="Place" required>
            <option value="" selected>Место</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="E">E</option>
            <option value="F">F</option>
            <option value="G">G</option>
            <option value="H">H</option>
            <option value="J">J</option>
            <option value="K">K</option>
        </select>
    </div>
    <div class="form-group" style="margin-top: 25px">
        <select asp-for="Class" required>
            <option value="эконом" selected>Экономкласс</option>
            <option value="бизнес">Бизнес-класс</option>
            <option value="первый">Первый класс</option>
        </select>
    </div>
    <div class="form-group" style="margin-top: 25px">
        <label>Возможность возврата</label>
        <input asp-for="Refund" type="checkbox">
    </div>
    <div class="form-group" style="margin-top: 25px">
        <input asp-for="Price" class="form-control" type="number" min="0" placeholder="Стоимость" required>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 25px; width: 250px; width: 250px">Добавить</button>
    @if (null != ViewData["Error"])
    {
        <h3>@ViewData["Error"]</h3>
    }
</form>
