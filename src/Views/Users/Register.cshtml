@{
    Layout = "_Layout";
}

@model BlitzFlug.Models.User

<div class="text-center" style="margin-top: 150px">
    <h2>Создайте личный кабинет</h2>
</div>
<form method="post" asp-controller="Users" asp-action="Register">
    <div class="form-group" style="margin-top: 25px">
        <input asp-for="Email" type="email" class="form-control" placeholder="Адрес электронной почты" required>
    </div>
    <div class="form-group" style="margin-top: 25px">
        <input asp-for="Password" type="password" minlength="6" class="form-control" placeholder="Пароль" required>
    </div>
    <button type="submit" class="btn btn-primary" style="margin-top: 25px; width: 250px">Зарегистрироваться</button>
    <div style="margin-top: 10px"><p>Уже зарегистрированы? <a href="Login">Войти</a></p></div>
    @if (ViewData["ValidateMessage"] != null)
    {
        <h3>@ViewData["ValidateMessage"]</h3>
    }
</form>
